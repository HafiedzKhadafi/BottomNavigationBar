<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/edit_pp"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:src="@drawable/profildefault"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_teks"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/edit_pp"
        android:text="EDIT PROFIL"
        android:textStyle="bold"
        android:textSize="30dp"/>

    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_nama"
        android:layout_below="@id/edit_teks"
        android:hint="Nama"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"/>

    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_email"
        android:layout_below="@id/edit_nama"
        android:hint="Email"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"/>

    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_notelpon"
        android:layout_below="@id/edit_email"
        android:hint="Nomor Telpon"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"/>

    <Button
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_simpan"
        android:text="SIMPAN"
        android:layout_below="@id/edit_notelpon"
        android:layout_margin="10dp"/>

    <Button
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_batal"
        android:text="BATAL"
        android:layout_below="@id/edit_notelpon"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/edit_simpan"/>

</RelativeLayout>